<?xml version="1.0" encoding="utf-8"?>

<com.example.petsmate.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/driver_CustomScrollView">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="#f06464">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="기사 등록"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"/>

            <EditText
                android:id="@+id/dr_id_input"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:hint="4~12자"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="100dp"
                android:background="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="패스워드"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"/>

            <EditText
                android:id="@+id/dr_pw_input"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:hint="8~12자"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:background="#ffffff"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/dr_pw2_input"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:hint="패스워드 재확인"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="100dp"
                android:background="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="220dp"/>

            <EditText
                android:id="@+id/dr_name_input"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:hint="2~12자"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="100dp"
                android:background="#ffffff"
                android:textAlignment="center" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="번호 인증"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="260dp"/>

            <EditText
                android:id="@+id/dr_phon_input"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:hint="휴대폰 번호 입력"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="100dp"
                android:background="#ffffff"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/dr_pcheck_input"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:hint="****"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="100dp"
                android:background="#ffffff"
                android:textAlignment="center" />

            <Button
                android:id="@+id/dr_pcheck_btn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="인증"
                android:textColor="#000000"
                android:background="#ffa7a7"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="300dp"/>

        <ImageView
            android:id="@+id/dr_image_up"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#ffffff"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="30dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역번호"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="360dp"/>

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="(지역)"
            android:textAlignment="center"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="380dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차종"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="425dp"/>

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="(선택)"
            android:textAlignment="center"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="450dp"/>

        <ImageView
            android:id="@+id/car_image_up"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#ffffff"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="30dp"
            />

        <ImageView
            android:id="@+id/car2_image_up"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#ffffff"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="30dp"
            />

        <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="기사 인증까지 "
        android:textSize="30dp"
        android:textColor="#f06464"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="750dp"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="2~3일 정도 소요됩니다. "
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#f06464"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="790dp"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

</com.example.petsmate.CustomScrollView>