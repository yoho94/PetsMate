<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="이용자 등록"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#f06464"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/mid_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="4~12자"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:background="#EAEAEA"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="패스워드"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/mpw_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="8~12자"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:background="#EAEAEA"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/mpw2_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="패스워드 재확인"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        android:background="#EAEAEA"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"/>

    <EditText
        android:id="@+id/mname_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="2~12자"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="100dp"
        android:background="#EAEAEA"
        android:textAlignment="center" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="번호 인증"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"/>

    <EditText
        android:id="@+id/mphon_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="휴대폰 번호 입력"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="100dp"
        android:background="#EAEAEA"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/mpcheck_input"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:hint="****"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        android:background="#EAEAEA"
        android:textAlignment="center" />

    <Button
        android:id="@+id/mpcheck_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="인증"
        android:textColor="#000000"
        android:background="#ffa7a7"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="300dp"/>

    <Button
        android:id="@+id/minput_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"
        android:background="#f06468"
        android:onClick="onSignup"
        android:text="확인"
        android:textColor="#000000" />


    <Button
        android:id="@+id/mcancel_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="취소"
        android:textColor="#000000"
        android:background="#f06468"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"/>

    <Button
        android:id="@+id/mpetadd_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="420dp"
        android:background="#f06468"
        android:onClick="onPetAdd"
        android:text="펫추가"
        android:textColor="#000000" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#EAEAEA"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottombar_menu">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>