<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.petsmate.CustomScrollView
        android:id="@+id/mypage_CustomScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="420dp"
                android:layout_height="70dp"
                android:layout_margin="0dp"

                android:background="#FFF55F5F"
                android:text="설정 > 개인정보"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp">

            </Button>
            <Button
                android:id="@+id/bt_nickname"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="닉네임" />
            <EditText
                android:id="@+id/nickname"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="100dp"
                />
            <Button
                android:text="변경"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginLeft="320dp"
                android:id="@+id/changethenickname"
                android:layout_marginTop="80dp"/>

            <Button
                android:id="@+id/bt_phonenumber"
                android:text="핸드폰 번호"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="125dp"/>

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="phone"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="125dp"/>

            <Button
                android:text="변경"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginLeft="320dp"
                android:id="@+id/changethephonnumber"
                android:layout_marginTop="130dp"/>
            <LinearLayout
                android:id="@+id/duple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="150dp">
                <Button
                    android:text="펫목록"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/petlist"
                    android:layout_marginTop="200dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/user_dog"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="250dp"
                    android:text="유저펫">
                </Button>
                <ImageView
                    android:id="@+id/user_dogpicture"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="200dp"
                    android:maxHeight="200dp"
                    android:onClick="onClick"
                    android:src="@drawable/postpic" />
            </LinearLayout>
            <Button
                android:id="@+id/weight"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="290dp"
                android:text="몸무게">

            </Button>
            <EditText
                android:id="@+id/dogname"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="245dp"
                android:layout_marginLeft="80dp"
                />
            <EditText
                android:id="@+id/dogweight"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="80dp"
                />
            <Button
                android:id="@+id/bt_add"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="350dp"
                android:text="펫 추가">

            </Button>
            <Button

                android:id="@+id/bt_del"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="350dp"
                android:text="펫 삭제">

            </Button>
        </RelativeLayout>

    </com.example.petsmate.CustomScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottombar_menu">

    </android.support.design.widget.BottomNavigationView>



</android.support.design.widget.CoordinatorLayout>