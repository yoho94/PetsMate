<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF">

    <Button
        android:id="@+id/settingAlarm"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:background="#FFF55F5F"
        android:text="설정 > 알람"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/alarmSound"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#FFF55F5F"
        android:text="알림 음"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/alarmNoise"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#FFF2BDBD"
        android:text="알림 사운드"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="148dp" />

    <Button
        android:id="@+id/vibe"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#FFF55F5F"
        android:text="진 동"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="216dp" />

    <Button
        android:id="@+id/noSound_vibe"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#FFF2BDBD"
        android:text="무음시: 진동"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="284dp" />

    <Button
        android:id="@+id/noSound_sound"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#FFF55F5F"
        android:text="무음시: 소리"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="352dp" />

    <Switch
        android:id="@+id/vibe_switch"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="216dp"
        android:checked="true"
        android:textColor="#DD8787"
        android:textColorLink="#00F18686"
        android:visibility="visible" />
    <Switch
        android:id="@+id/noSound_vibe_switch"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="290dp"
        android:checked="true"
        android:textColor="#DD8787"
        android:textColorLink="#00F18686"
        android:visibility="visible" />
    <Switch
        android:id="@+id/noSound_sound_switch"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="360dp"
        android:checked="true"
        android:textColor="#DD8787"
        android:textColorLink="#00F18686"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="635dp">

        <ImageButton
            android:id="@+id/driver_btn"
            android:layout_width="105dp"
            android:layout_height="96dp"
            android:src="@drawable/btn_car"/>

        <ImageButton
            android:id="@+id/mypet_btn"
            android:layout_width="115dp"
            android:layout_height="96dp"
            android:src="@drawable/btn_dog"/>

        <ImageButton
            android:id="@+id/chatting_btn"
            android:layout_width="95dp"
            android:layout_height="106dp"
            android:src="@drawable/btn_chat"/>

        <ImageButton
            android:id="@+id/setting_btn"
            android:layout_width="97dp"
            android:layout_height="103dp"
            android:src="@drawable/btn_option"/>

        //마진탑 500 하면 보임
    </LinearLayout>
    <Spinner
        android:id="@+id/alarmMelodyspinner"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="90dp" />


</RelativeLayout>