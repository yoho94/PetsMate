<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/reserve_text_startsearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/wgborder"
        android:ems="10"
        android:hint="출발지 검색"
        android:textSize="30dp"
        android:textAlignment="center"
        android:inputType="text" />

    <EditText
        android:id="@+id/reserve_text_arrival"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wgborder"
        android:ems="10"
        android:hint="도착지 검색"
        android:textSize="30dp"
        android:textAlignment="center"
        android:inputType="text" />

    <Button
        android:id="@+id/reserve_btn_callnow"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rbborder"
        android:text="즉시콜"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/reserve_btn_booking"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/wgborder"
        android:text="예약하기" />

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/reserve_text_carsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="차종"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/reserve_btn_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/rbborder"
                android:text="중형" />

            <Button
                android:id="@+id/reserve_btn_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/wgborder"
                android:text="대형" />

        </LinearLayout>

    </TableRow>


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reserve_text_carsize2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="펫 선택" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reserve_pet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >



        </LinearLayout>

    </TableRow>


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/reserve_text_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="연락처" />

        <Button
            android:id="@+id/reserve_btn_mynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/wgborder"
            android:layout_weight="1"
            android:text="내 번호" />

        <Button
            android:id="@+id/reserve_btn_anothernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rbborder"
            android:layout_weight="1"
            android:text="다른 번호" />

    </TableRow>

    <EditText
        android:id="@+id/reserve_text_inputphonenumber"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:background="@drawable/wgborder"
        android:ems="10"
        android:hint="(다른 번호 입력)"
        android:inputType="phone"
        android:textAlignment="center" />


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/reserve_btn_oneway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/wgborder"
            android:text="편도"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/reserve_btn_roundtrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rbborder"
            android:text="왕복"
            android:layout_gravity="center"/>
    </TableRow>



</LinearLayout>